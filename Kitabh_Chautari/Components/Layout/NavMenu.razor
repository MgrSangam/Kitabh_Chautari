                </div>
            </div>
        </div>
        <nav class="nav-links">
            <div class="search-container">
                @if (isSearchActive)
                {
                    <input type="text" class="search-input" @bind="searchQuery"
                           placeholder="Search by title, ISBN, author..."
                           @onkeyup="@(e => { if (e.Key == "Enter") PerformSearch(); })"
                           @onblur="ToggleSearch" autofocus />
                }
