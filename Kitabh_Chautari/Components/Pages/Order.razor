@page "/order"
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<!-- Main Content -->
<div class="mainContainer">
    <!-- Order Section -->
    <div class="order-container">
        <!-- Address and Cart Items Section -->
        <div class="address-cart-section">
            <!-- Shipping Address -->
            <div class="shipping-address">
                <h2>Shipping Address</h2>
                <p>1234 Example Street, City, Country</p>
                <!-- In a real app, this would be an editable form -->
            </div>

            <!-- Cart Items Section -->
            <div class="cart-items">
                @foreach (var item in cartItems)
                {
                    <div class="cart-item">
                        <div class="cart-image">
                            <img src="@item.ImageUrl" alt="@item.Title" />
                        </div>
                        <div class="cart-info">
                            <h3 class="book-title">@item.Title</h3>
                            <span class="book-price">Rs. @item.Price.ToString("N0")</span>
                            <span class="cart-quantity">Qty: @item.Quantity</span>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Order Summary Section -->
        <div class="order-summary">
            <h2>Order Summary</h2>
            <div class="summary-totals">
                <div class="total-row">
                    <span>Total Items:</span>
                    <span>Rs. @cartItems.Sum(i => i.Price * i.Quantity).ToString("N0")</span>
                </div>
                <div class="total-row">
                    <span>Delivery Fee:</span>
                    <span>Rs. 200</span>
                </div>
                <div class="total-row total-final">
                    <span>Total Fee:</span>
                    <span>Rs. @(cartItems.Sum(i => i.Price * i.Quantity) + 200).ToString("N0")</span>
                </div>
            </div>
            <div class="proceed-button-container">
                <button class="btn-proceed" @onclick="ProceedToOrderComplete">Proceed</button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer-grid">
        <div class="footerCard">
            <h3 class="footer-title">About Us</h3>
            <p class="infoName">Debit Gurung</p>
            <p class="infoName">Tuphan Gurung</p>
            <p class="infoName">Sangam Thapa</p>
            <p class="infoName">Sujal Gurung</p>
        </div>
        <div class="footerCard">
            <h3 class="footer-title">Contact Us</h3>
            <p class="contact-title">kitab@gmail.com</p>
        </div>
        <div class="footerCard">
            <h3 class="footer-title">Join Us On</h3>
            <span class="bi bi-facebook"></span>
            <span class="bi bi-instagram"></span>
            <span class="bi bi-tiktok"></span>
            <span class="bi bi-twitter-x"></span>
        </div>
    </div>
</div>

<!-- Notification -->
<div class="notification" id="notification" style="display: none;"></div>

<style>
    .mainContainer {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        margin-top: 200px; /* Match the gap from the homepage */
    }

    .order-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
        margin-bottom: 40px;
    }

    .address-cart-section {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .shipping-address h2, .order-summary h2 {
        font-size: 1.5rem;
        margin-bottom: 15px;
        color: #333;
    }

    .shipping-address p {
        color: #666;
        line-height: 1.6;
    }

    .cart-items {
        margin-bottom: 20px;
    }

    .cart-item {
        display: flex;
        align-items: center;
        gap: 20px;
        padding: 15px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    .cart-image img {
        width: 100px;
        height: 150px;
        object-fit: cover;
        border-radius: 4px;
    }

    .cart-info {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .book-title {
        font-size: 1.1rem;
        margin: 0;
        color: #333;
    }

    .book-price {
        font-weight: bold;
        color: #333;
        font-size: 1rem;
    }

    .cart-quantity {
        color: #666;
        font-size: 0.9rem;
    }

    .summary-totals {
        margin-top: 20px;
    }

    .total-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        color: #666;
    }

    .total-final {
        font-weight: bold;
        color: #333;
        border-top: 1px solid #e0e0e0;
        padding-top: 10px;
    }

    .proceed-button-container {
        text-align: right;
        margin-top: 20px;
    }

    .btn-proceed {
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: 500;
        font-size: 1rem;
    }

        .btn-proceed:hover {
            background-color: #45a049;
        }

    .footer-grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 30px;
        margin-top: 50px;
        padding: 30px 0;
        border-top: 1px solid #e0e0e0;
    }

    .footer-title {
        font-size: 1.2rem;
        margin-bottom: 15px;
        color: #333;
    }

    .infoName, .contact-title {
        margin: 5px 0;
        color: #666;
    }

    .bi {
        font-size: 1.5rem;
        margin-right: 15px;
        color: #555;
        cursor: pointer;
    }

        .bi:hover {
            color: #0066cc;
        }

    .notification {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #4CAF50;
        color: white;
        padding: 15px;
        border-radius: 4px;
        z-index: 1000;
        display: none;
    }
</style>

<script>
    function showNotification(message) {
        const notification = document.getElementById('notification');
        notification.textContent = message;
        notification.style.display = 'block';
        setTimeout(() => {
            notification.style.display = 'none';
        }, 3000);
    }
</script>

@code {
    private List<CartItem> cartItems = new List<CartItem>
    {
        new CartItem { Title = "The Picture of Dorian Gray", Price = 750, Quantity = 1, ImageUrl = "images/book1.jpg" }
        // Add more items as needed; this is a sample
    };

    private void ProceedToOrderComplete()
    {
        NavigationManager.NavigateTo("/ordercomplete");
    }

    private class CartItem
    {
        public string Title { get; set; }
        public decimal Price { get; set; }
        public int Quantity { get; set; }
        public string ImageUrl { get; set; }
    }
}